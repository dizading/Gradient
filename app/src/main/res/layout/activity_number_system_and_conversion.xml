<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mm"
    android:background="@drawable/gradient"
    tools:context="com.example.android.gradient.NumberSystemAndConversion">

    <LinearLayout
        android:padding="@dimen/eight_dips"
        style="@style/mmv">
        <TextView
            android:onClick="toNumberActivity"
            android:layout_marginTop="@dimen/eight_dips"
            android:textSize="@dimen/eighteen_sp"
            android:padding="@dimen/eight_dips"
            android:background="@drawable/ns_and_convrt"
            android:text="@string/what_are_numbers"
            style="@style/mw"/>
        <TextView
            android:onClick="toDecimalExplanation"
            android:layout_marginTop="@dimen/eight_dips"
            android:textSize="@dimen/eighteen_sp"
            android:padding="@dimen/eight_dips"
            android:background="@drawable/ns_and_convrt"
            android:text="@string/decimal_number_system"
            style="@style/mw"/>
        <TextView
            android:onClick="toBinaryExplanation"
            android:layout_marginTop="@dimen/eight_dips"
            android:textSize="@dimen/eighteen_sp"
            android:padding="@dimen/eight_dips"
            android:background="@drawable/ns_and_convrt"
            android:text="@string/binary_number_system"
            style="@style/mw"/>
        <TextView
            android:onClick="toOctalExplanation"
            android:layout_marginTop="@dimen/eight_dips"
            android:textSize="@dimen/eighteen_sp"
            android:padding="@dimen/eight_dips"
            android:text="@string/octal_number_system"
            android:background="@drawable/ns_and_convrt"
            style="@style/mw"/>
        <TextView
            android:onClick="toHexadecimalExplanation"
            android:layout_marginTop="@dimen/eight_dips"
            android:textSize="@dimen/eighteen_sp"
            android:padding="@dimen/eight_dips"
            android:background="@drawable/ns_and_convrt"
            android:text="@string/hexadecimal_number_system"
            style="@style/mw"/>
    </LinearLayout>

</ScrollView>
