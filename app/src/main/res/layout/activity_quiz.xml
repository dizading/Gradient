<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/mmv"
    tools:context="com.example.android.gradient.Quiz">

    <android.support.design.widget.TabLayout
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorColor="@color/white"
        app:tabTextColor="@color/white"
        android:background="@color/colorPrimary"
        android:id="@+id/tab_layout" style="@style/mw">

        <android.support.design.widget.TabItem style="@style/ww"/>

        <android.support.design.widget.TabItem style="@style/ww"/>

        <android.support.design.widget.TabItem style="@style/ww"/>
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:padding="@dimen/four_dips"
        android:background="@drawable/gradient"
        android:id="@+id/view_pager" style="@style/mm"/>
</LinearLayout>
